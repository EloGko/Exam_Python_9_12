# FONCTIONS

def motAuHasard (tableauMots):
    i = random.randint(0,9)
    motATrouver = tableauMots[i]
    return motATrouver

print(motAuHasard(tableauMots))
input()

def chercheDansMot(mot, lettreCherchee):
    for i in range(len(mot)):
        if lettreCherchee == mot[i]:
            position = i+1
    return position

